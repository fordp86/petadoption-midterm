<h1>Edit a Pet Info</h1>
{{#with foundPet}}
<form action='/pets/edit/{{petId}}' method="POST">
    <label for="name">Enter Pet Name: </label>
    <input type="text" name="name" placeholder="Enter Name"
        value="{{name}}"/><br>

    <label for="description">Enter Pet Description: </label>
    <input type="text" name="description" placeholder="Enter Description"
        value="{{description}}" /><br>

    <label for="price">Enter Item Price: </label>
    <input type="text" name="price" placeholder="Enter Price"
        value="{{price}}" /><br>

    <button type="submit">Edit Pet</button>
</form>
{{/with}}