<div class="row">
    <div class="col col-md-12">
        <h1>Edit a Pet Info</h1>
    </div>
</div>
<div class="row">
    <div class="col col-md-12">
        {{#with foundPet}}
        <div class="edit">
            <form action='/pets/edit/{{petId}}' method="POST">
                <label class="form-label" for="petName">Edit Pet Name: </label>
                <input class="form-control" type="text" name="petName" value="{{petName}}"/><br>

                <label class="form-label" for="petImage">Edit Pet Image: </label>
                <input class="form-control" type="text" name="petImage"value="{{petImage}}" /><br>

                <label class="form-label" for="description">Edit Pet Description: </label>
                <input class="form-control" type="text" name="description" value="{{description}}" /><br>
                <button type="submit" class="btn btn-primary">Save Pet</button>
            </form>
            <div class="actions d-flex justify-content-end">
                <ul class="list-group list-group-horizontal">
                    <li class="list-group-item">
                        <form action="/pets/delete/{{petId}}" method="POST">
                            <button type="submit" class="btn btn-danger">Delete Pet</button>
                        </form>
                    </li>
                    <li class="list-group-item">
                        <a href="/pets/{{petId}}" class="btn btn-secondary">Go Back</a>
                    </li>
                </ul>
            </div>
        </div>
        {{/with}}
    </div>
</div>